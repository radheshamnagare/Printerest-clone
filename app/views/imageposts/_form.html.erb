<div class="card-body">
<%= form_with(model: imagepost) do |form| %>
  <% if imagepost.errors.any? %>
     <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <ul>
        <% imagepost.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
     </ul>   
     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
     </button>
    </div>
  <% end %>



  <div>
    <%= form.label :title, style: "display: block" ,class:"form-label"%>
    <%= form.text_field :title ,class:"form-control",style:"width:400px;"%>
  </div>

  <div>
    <%= form.label :image ,class:"form-label"%>
    <%= form.file_field :image ,class:"form-control",style:"width:400px;"%>
  </div>

  <div>
    <%= form.number_field :user_id ,id: :imagepost_user_id, class:"form-control",value:current_user.id,type: :hidden%>
  </div>
  
  <br/><br/>
  <div>
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
</div>
